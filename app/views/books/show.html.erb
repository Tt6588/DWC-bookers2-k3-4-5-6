<main>
  <p id="notice"><%= notice %></p>
  <div class="container">
    <div class="row">

      <%= render 'books/info', book: @book_new, user: @user %>

　　　<div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                  <%= link_to user_path(@book.user.id) do %>
                    <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image2.jpg" %>
                    <br><%= @book.user.name %>
                  <% end %>
                </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              
                  <td>            
                    <% if @book.favorited_by?(current_user) %>
                      <p>
                        <%= link_to book_favorites_path(@book), method: :delete do %>
                          ♥<%= @book.favorites.count %>
                        <% end %>
                      </p>
                      <% else %>
                      <p>
                        <%= link_to book_favorites_path(@book), method: :post do %>
                          ♡<%= @book.favorites.count %>
                        <% end %>
                      </p>
                    <% end %>
                  </td>
              
              <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %></td>
                <td>
                  <%= link_to "Destroy", book_path(@book.id), "data-confirm" => "本当に消しますか？", method: :delete, class:"btn btn-sm btn-danger" %>
                </td>
                <td>comennt_count</td>
              <% end %>
            </tr>
          </tbody>
        </table>
        
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>comment_index</tr>
          </tbody>
        </table>
        
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>comment_form</tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
