<main>
  <div class="container">
    <div class="row">
      <div class="col">
        <h2>Followings Users</h2>
        <table class="table table-hover table-inverse">
        <% if @users.exists? %>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image2.jpg" %></td>
                <td><%= user.name %></td>
                <td>フォロー数: <%= user.followings.count %></td>
                <td>フォロワー数: <%= user.followers.count %></td>
                <td>show</td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
          <p>ユーザーはいません</p>
        <% end %>
      </div>
    </div>
  </div>
</main>