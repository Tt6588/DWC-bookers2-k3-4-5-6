<main>
  <div class="container">
    <div class="row">
      <div class="col">
      <% if @model == 'user' %>
        <h3>Users search for "<%= @content %>"</h3>
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody id="post">
            <% @records.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image2.jpg" %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
            </tbody>
        </table class="table table-hover table-inverse">
        
      <% else @model == 'book' %>
        <h3>Books search for "<%= @content %>"</h3>
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            </thead>
            <tbody id="post">
            <% @records.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image2.jpg" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            </tbody>
      <% end %>
      </div>
    </div>
  </div>
</main>